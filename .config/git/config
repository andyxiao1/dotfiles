[core]
	# Use less as pager with the following flags:
	# -F : quit if output fits on one screen
	# -R : show raw control characters (enables color)
	# -S : disable line wrapping (horizontal scroll instead)
	# We omit -X so the screen is cleared after quitting less,
	# keeping the terminal clean instead of preserving output.
	pager = less -FRS
